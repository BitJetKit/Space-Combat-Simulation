<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:immersive">true</item>
        <item name="android:isSticky">true</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/menu_button</item>
        <!-- <item name="android:backgroundTint">@color/colorButtonBackground</item> -->
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#586d91</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDy">2</item>
    </style>

</resources>
