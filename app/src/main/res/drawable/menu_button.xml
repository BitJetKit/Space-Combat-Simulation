<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonPressed1" android:endColor="@color/colorButtonPressed2" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="@color/colorButton3" />
            <corners android:radius="5dip" />
            <solid android:color="#58857e" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="@color/colorButton3" />
            <corners android:radius="5dip" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonDisabled1" android:endColor="@color/colorButtonDisabled2" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/colorButton3" />
            <gradient android:angle="-90" android:startColor="@color/colorButton1" android:endColor="@color/colorButton2" />
        </shape>
    </item>

</selector>